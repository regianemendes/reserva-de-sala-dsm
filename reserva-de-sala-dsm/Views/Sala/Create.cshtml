@model reserva_de_sala_dsm.Models.Sala

@{
    ViewData["Title"] = "Cadastrar Sala";
}

<h1>Cadastrar Sala</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Capacidade" class="control-label">Capacidade</label>
        <input asp-for="Capacidade" class="form-control" />
        <span asp-validation-for="Capacidade" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Recursos" class="control-label">Recursos</label>
        <input asp-for="Recursos" class="form-control" />
        <span asp-validation-for="Recursos" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>

</form>
