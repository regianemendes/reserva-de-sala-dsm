@model reserva_de_sala_dsm.Models.Sala

@{
    ViewData["Title"] = "Excluir Sala";
}


<h1>Excluir Sala</h1>
<h3>Tem certeza que deseja excluir esta sala?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Capacidade:</dt>
        <dd class="col-sm-10">@Model.Capacidade</dd>

        <dt class="col-sm-2">Recursos:</dt>
        <dd class="col-sm-10">@Model.Recursos</dd>
    </dl>
</div>
<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-danger">Confirmar exclusão</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
